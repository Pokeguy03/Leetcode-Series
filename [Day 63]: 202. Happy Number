
class Solution:
    def isHappy(self, n: int) -> bool:
        seen=set()
        
        while n!=1:
            if n in seen:
                return False
            seen.add(n)
            srt=0
            while 0<n:
                digit=n%10
                srt=srt+digit**2
                n//=10
            n=srt
        return True

        
